<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.DreamPerfumes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <!-- No Action Bar Theme -->
    <style name="Theme.DreamPerfumes.NoActionBar" parent="Theme.DreamPerfumes">
        <!-- Remove the action bar -->
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Popup Overlay Theme -->
    <style name="Theme.DreamPerfumes.PopupOverlay" parent="ThemeOverlay.MaterialComponents" />


    <!-- App Bar Overlay Theme -->
    <style name="Theme.DreamPerfumes.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
</resources>






